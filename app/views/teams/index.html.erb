<h1>Teams#index</h1>
<p>Find me in app/views/teams/index.html.erb</p>
<div class="max-w-3xl mx-auto">
  <h1 class="text-3xl font-bold my-6 text-center">Les équipes</h1>
  <div class="flex justify-end mb-4">
    <%= link_to "Nouvelle équipe", new_team_path, class: "btn btn-primary" %>
  </div>
  <ul class="divide-y">
    <% @teams.each do |team| %>
      <li class="flex items-center py-3">
        <% if team.logo.present? %>
          <img src="<%= team.logo %>" alt="Logo" class="w-10 h-10 mr-4 rounded-full object-contain bg-white border">
        <% end %>
        <%= link_to team.name, team_path(team), class: "font-semibold text-lg" %>
        <div class="ml-auto space-x-2">
          <%= link_to "Éditer", edit_team_path(team), class: "btn btn-sm btn-warning" %>
          <%= link_to "Supprimer", team_path(team), method: :delete, data: { confirm: "Supprimer cette équipe ?" }, class: "btn btn-sm btn-danger" %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
