<% if jerseys.any? %>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <%= render partial: "jerseys/jersey_card", collection: jerseys, as: :jersey %>
  </div>
<% else %>
  <div class="text-center py-5">
    <p class="text-muted">Aucun maillot ne correspond à ces critères.</p>
  </div>
<% end %>
