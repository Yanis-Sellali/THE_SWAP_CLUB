<div class="card h-100 shadow-sm">
  <% if jersey.image.attached? %>
    <%= image_tag url_for(jersey.image), class: "card-img-top", alt: jersey.name, loading: "lazy", style: "max-height: 250px;" %>
  <% else %>
    <%= image_tag "default_jersey.jpg", class: "card-img-top", alt: "Image par défaut", loading: "lazy", style: "max-height: 250px;" %>
  <% end %>
  <div class="card-body text-center">
    <h5 class="card-title mb-1 fw-bold"><%= jersey.name %></h5>
    <p class="text-muted mb-1"><%= jersey.team&.name || "Équipe inconnue" %></p>
    <p class="small text-secondary"><strong>Année :</strong> <%= jersey.year %></p>
    <%= link_to "Voir le maillot", jersey_path(jersey), class: "btn btn-primary btn-sm mt-2" %>
  </div>
</div>
