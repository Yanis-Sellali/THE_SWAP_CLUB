<div class="col">
  <%= link_to jersey_path(jersey), class: "text-decoration-none text-dark", data: {turbo: false} do %>
    <div class="card shadow-sm border-0 rounded-4 h-100">
      <% if jersey.image.attached? %>
        <%= image_tag jersey.image, class: "card-img-top rounded-top-4", style: "height: 280px; object-fit: cover; width: 100%;" %>
      <% else %>
        <%= image_tag "default_jersey.jpg", class: "card-img-top rounded-top-4", style: "height: 280px; object-fit: cover; width: 100%;" %>
      <% end %>

      <div class="card-body d-flex flex-column justify-content-between" style="min-height: 180px;">
        <div>
          <h6 class="fw-bold text-uppercase mb-1"><%= jersey.team&.name %> <%= jersey.year %></h6>
          <p class="mb-1 text-muted"><%= jersey.name %></p>
          <p class="mb-2"><strong>TAILLE :</strong> <%= jersey.size %></p>
        </div>
        <div class="d-flex align-items-center gap-2 mt-auto pt-2 justify-content-end">
          <small class="text-muted">Post√© par <%= jersey.user.nom.presence || jersey.user.email %></small>
          <%= image_tag(jersey.user.avatar.attached? ? url_for(jersey.user.avatar) : "default-avatar.jpg",
                        class: "rounded-circle",
                        style: "width: 28px; height: 28px; object-fit: cover;") %>
        </div>
      </div>
    </div>
  <% end %>
</div>
