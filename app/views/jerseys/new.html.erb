<div class="container my-5 desktop-ajouter-un-maillot text-dark">
  <h1 class="text-center mb-4">Ajouter un Maillot</h1>

  <%= form_with model: @jersey, local: true, html: { multipart: true } do |f| %>
    <div class="mb-3">
      <%= f.label :image, "Ajouter vos photos", class: "form-label" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :name, "Nom du Maillot", class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :team_id, "Équipe", class: "form-label" %>
      <%= f.collection_select :team_id, Team.all, :id, :name, { prompt: "Sélectionne une équipe" }, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, "Description", class: "form-label" %>
      <%= f.text_area :description, rows: 3, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :size, "Taille du maillot", class: "form-label" %>
      <%= f.select :size, ["S", "M", "L", "XL", "XXL"], { prompt: "Choisis une taille" }, class: "form-select" %>
    </div>

    <div class="mb-4">
      <%= f.label :condition, "État du maillot", class: "form-label" %>
      <%= f.select :condition, ["Neuf", "Très bon état", "Bon état", "Satisfaisant"], { prompt: "Choisis un état" }, class: "form-select" %>
    </div>

    <div class="text-center">
      <%= f.submit "Ajouter mon maillot", class: "btn btn-dark px-4 py-2" %>
    </div>
  <% end %>
</div>
