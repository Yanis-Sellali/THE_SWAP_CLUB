<div class="user-page container text-center my-5">
  <h1 class="page-title">Mon profil</h1>

  <%= image_tag("default_avatar.jpg", class: "avatar-large") %>

  <h2 class="user-name"><%= @user.nom %></h2>
  <div class="user-info">
    <span class="rating">‚≠ê <%= @user.rating %> (<%= @jerseys_number %> swaps)</span><br>
    <span class="location">üìç <%= @user.localisation %></span>
  </div>

<div class="d-flex justify-content-center gap-2 mt-3">
  <%= link_to "Modifier mon profil", edit_registration_path(@user), class: "btn btn-dark" %>
  <%= link_to "Voir mes √©changes", exchanges_path, class: "btn btn-outline-dark" %>
</div>


<h3 class="section-title mt-5 text-dark">Mes Maillots</h3>

<div class="row justify-content-center mt-4">
  <% @jerseys.each do |jersey| %>
    <div class="col-md-3 col-sm-6 mb-4">
      <div class="card h-100 shadow-sm">
        <%= link_to edit_jersey_path(jersey), class: "text-decoration-none text-dark" do %>
          <%= image_tag jersey.image, class: "card-img-top", style: "height: 250px; object-fit: cover;" if jersey.image.present? %>
          <div class="card-body text-center">
            <h6 class="fw-bold"><%= jersey.team.name %></h6>
            <p class="mb-0 text-muted"><%= jersey.flocking.presence || "-" %></p>
            <p class="mb-0 text-muted"><%= jersey.year %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
    <div class="col-6 col-md-4 col-lg-3 mb-4">
      <div class="add-jersey card h-100 d-flex justify-content-center align-items-center">
        <%= link_to new_jersey_path, class: "text-decoration-none text-muted text-center" do %>
          <div>
            <i class="bi bi-plus-circle fs-1 mb-2"></i>
            <div class="fw-bold">Ajouter un maillot</div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
