<!-- Hero Banner -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_url('shop-banner.jpg') %>); background-size: cover; background-position: center; height: 400px;">
  <div class="container d-flex flex-column align-items-center justify-content-center h-100">
    <%= image_tag "logo-banner.png" %>
  </div>
</div>

<!-- Clubs -->
<section class="py-5 bg-white">
  <h2 class="text-center fw-bold mb-4">LES CLUBS</h2>
  <div class="container custom-clubs-grid">
    <div class="row g-3">
      <% @teams.each_with_index do |team, index| %>
        <% size_class = case index
          when 0, 3 then 'col-md-6 col-lg-4'
          when 1, 2, 4, 5 then 'col-md-6 col-lg-4'
          else 'col-6 col-md-4 col-lg-3'
        end %>

        <div class="<%= size_class %>">
          <%= link_to team_path(team), class: "card team-card text-white border-0 shadow-sm h-100 position-relative" do %>
            <%= image_tag team.background, class: "card-img h-100 w-100", style: "object-fit: cover; filter: brightness(0.5);" %>

            <div class="card-img-overlay d-flex flex-column justify-content-center align-items-center text-center">
              <div class="team-logo-wrapper mb-2">
                <%= image_tag team.logo, alt: team.name, class: "team-logo" %>
              </div>
              <h5 class="card-title text-uppercase fw-bold text-white team-name m-0"><%= team.name %></h5>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Maillots -->
<section class="jerseys-carousel py-5 bg-white">
  <h2 class="text-center fw-bold mb-4">TOUS LES MAILLOTS</h2>
  <div class="container-fluid px-4">
    <div class="jersey-scroll d-flex overflow-auto gap-4 pb-2">
      <% @jerseys.each do |jersey| %>
        <%= link_to jersey_path(jersey), class: "jersey-card text-dark text-decoration-none flex-shrink-0" do %>
          <div class="card-custom">
            <% if jersey.image.attached? %>
              <%= image_tag jersey.image, class: "jersey-img" %>
            <% else %>
              <div class="jersey-img placeholder d-flex align-items-center justify-content-center">
                Pas d’image
              </div>
            <% end %>

            <div class="jersey-content p-3">
              <div class="jersey-team"><%= jersey.team.name %></div>
              <div class="jersey-name fw-bold"><%= jersey.name %></div>
              <div class="jersey-year">Année : <%= jersey.year %></div>
              <div class="jersey-size">Taille : <%= jersey.size %></div>
              <div class="jersey-user">
                Posté par <%= jersey.user.nom %>
                <%= image_tag(jersey.user.avatar.attached? ? url_for(jersey.user.avatar) : "default-avatar.jpg", class: "user-avatar ms-2") %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>


