<!-- Hero Banner -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_url('banner-psg.jpg') %>); background-size: cover; background-position: center; height: 400px;">
  <div class="container d-flex flex-column align-items-center justify-content-center h-100">
    <%= image_tag "logo-banner.png" %>
    <p class="text-white mt-3">Old shirts, new stories.</p>
  </div>
</div>

<!-- Maillots -->
<section class="py-5 bg-white">
  <h2 class="text-center fw-bold mb-4">TOUS LES MAILLOTS</h2>
  <div class="container-fluid px-5">
    <div class="row flex-nowrap overflow-auto">
      <% @jerseys.each do |jersey| %>
        <div class="col-6 col-md-2">
          <%= link_to jersey_path(jersey), class: "text-decoration-none text-dark" do %>
            <div class="card shadow-sm">
              <% if jersey.image.attached? %>
                <%= image_tag url_for(jersey.image), class: "card-img-top img-fluid", style: "max-height: 150px; object-fit: cover;" %>
              <% else %>
                <div class="d-flex align-items-center justify-content-center" style="height: 150px; background-color: #f0f0f0; color: #888; font-weight: bold;">
                  Pas d'image disponible
                </div>
              <% end %>
              <div class="card-body text-center">
                <h6 class="card-title mb-1"><%= jersey.name %></h6>
                <p class="card-text small"><strong>Ann√©e :</strong> <%= jersey.year %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>


<!-- Clubs -->
<section class="py-5 bg-white">
  <h2 class="text-center fw-bold mb-4">LES CLUBS</h2>
  <div class="container custom-clubs-grid">
    <div class="row g-3">
      <% @teams.each_with_index do |team, index| %>
        <% size_class = case index
          when 0, 3 then 'col-md-6 col-lg-4'
          when 1, 2, 4, 5 then 'col-md-6 col-lg-4'
          else 'col-6 col-md-4 col-lg-3'
        end %>

        <div class="<%= size_class %>">
          <%= link_to team_path(team), class: "card team-card text-white border-0 shadow-sm h-100 position-relative" do %>
            <%= image_tag team.background, class: "card-img h-100 w-100", style: "object-fit: cover; filter: brightness(0.5);" %>

            <div class="card-img-overlay d-flex flex-column justify-content-center align-items-center text-center">
              <div class="team-logo-wrapper mb-2">
                <%= image_tag team.logo, alt: team.name, class: "team-logo" %>
              </div>
              <h5 class="card-title text-uppercase fw-bold text-white team-name m-0"><%= team.name %></h5>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
