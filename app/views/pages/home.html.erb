<!-- HERO BANNER -->
<div class="banner position-relative text-center text-white" style="background: linear-gradient(rgba(0,0,0,0.45), rgba(0,0,0,0.45)), url(<%= image_url('shop-banner.jpg') %>) center/cover no-repeat; height: 400px;">
  <div class="container h-100 d-flex justify-content-center align-items-center">
    <%= image_tag "logo-banner.png", alt: "The Swap Club", class: "img-fluid" %>
  </div>
</div>



<section class="py-5">

<!-- MAILLOTS -->

  <h2 class="text-center fw-bold mb-4">TOUS LES MAILLOTS</h2>
  <div class="container-fluid px-5">
    <div class="d-flex flex-row flex-nowrap overflow-auto">
      <% @jerseys.each do |jersey| %>
        <div class="me-3" style="min-width: 260px; max-width: 280px;">
          <%= link_to jersey_path(jersey), class: "text-decoration-none text-dark" do %>
            <div class="card shadow-sm rounded-4 h-100 d-flex flex-column" style="height: 100%;">

              <% if jersey.image.attached? %>
                <%= image_tag url_for(jersey.image), class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
              <% else %>
                <%= image_tag "default_jersey.jpg", class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
              <% end %>

              <div class="card-body d-flex flex-column justify-content-between" style="min-height: 200px;">
                <div>
                  <h6 class="fw-bold mb-1"><%= jersey.team.name.upcase %> <%= jersey.year %></h6>
                  <p class="mb-1 text-muted"><%= jersey.name %></p>
                  <p class="mb-2"><strong>TAILLE :</strong> <%= jersey.size %></p>
                </div>

                <div class="d-flex align-items-center justify-content-end mt-auto pt-2 gap-2">
                  <small class="text-muted">Post√© par <%= jersey.user.nom %></small>
                  <%= image_tag(jersey.user.avatar.attached? ? url_for(jersey.user.avatar) : "default-avatar.jpg",
                                class: "rounded-circle",
                                style: "width: 28px; height: 28px; object-fit: cover;") %>
                </div>
              </div>

            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>



<section class="py-5">
<!-- CLUBS -->


  <h2 class="text-center fw-bold mb-4">LES CLUBS</h2>
  <div class="container custom-clubs-grid">
    <div class="row g-3">
      <% @teams.each_with_index do |team, index| %>
        <% size_class = case index
          when 0, 3 then 'col-md-6 col-lg-4'
          when 1, 2, 4, 5 then 'col-md-6 col-lg-4'
          else 'col-6 col-md-4 col-lg-3'
        end %>

        <div class="<%= size_class %>">
          <%= link_to team_path(team), class: "card team-card text-white border-0 shadow-sm h-100 position-relative" do %>
            <%= image_tag team.background, class: "card-img h-100 w-100", style: "object-fit: cover; filter: brightness(0.5);" %>

            <div class="card-img-overlay d-flex flex-column justify-content-center align-items-center text-center">
              <div class="team-logo-wrapper mb-2">
                <%= image_tag team.logo, alt: team.name, class: "team-logo", style: "max-width: 60px;" %>
              </div>
              <h5 class="card-title text-uppercase fw-bold text-white team-name m-0"><%= team.name %></h5>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>
