<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg p-4 animate__animated animate__fadeInUp">
        <h2 class="text-center mb-4">Modifier mon profil ðŸš€</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
          <div class="form-group mb-3">
            <%= f.input :email, required: true, autofocus: true, input_html: { class: "form-control", autocomplete: "email" } %>
          </div>

          <div class="form-group mb-3">
          <%= f.input :nom, label: "Pseudo", required: false, input_html: { class: "form-control" } %>
          </div>

          <div class="form-group mb-3">
          <%= f.input :localisation, label: "Localisation", required: false, input_html: { class: "form-control" } %>
          </div>
          
          <div class="form-group mb-3">
            <%= f.input :password, hint: ("Laisse vide si tu ne veux pas le changer"), required: false, input_html: { class: "form-control", autocomplete: "new-password" } %>
          </div>

          <div class="form-group mb-3">
            <%= f.input :password_confirmation, required: false, input_html: { class: "form-control", autocomplete: "new-password" } %>
          </div>

          <div class="form-group mb-3">
            <%= f.input :current_password, hint: "Mot de passe actuel requis pour valider les modifications", required: true, input_html: { class: "form-control", autocomplete: "current-password" } %>
          </div>

          <!-- Champ Image de profil -->
          <div class="form-group mb-3 text-center">
            <%= f.input :avatar, as: :file, label: "Upload your profile picture",
                         input_html: { class: "form-control-file", accept: "image/*",
                                       data: { controller: "preview", action: "change->preview#display" } } %>
            <img id="preview-image" class="mt-2 img-thumbnail" style="max-width: 150px;" />
          </div>

          <!-- Boutons d'action bien positionnÃ©s -->
          <div class="d-flex justify-content-between mt-4">
            <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Es-tu sÃ»r ?", turbo_confirm: "Es-tu sÃ»r ?" }, method: :delete, class: "btn btn-danger" %>
            <%= f.button :submit, "Mettre Ã  jour", class: "btn btn-primary" %>
          </div>
        <% end %>

        <p class="text-center mt-3">
          <%= link_to "Retour", :back, class: "text-secondary fw-bold" %>
        </p>
      </div>
    </div>
  </div>
</div>
