<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg p-4 animate__animated animate__fadeInUp">
        <h2 class="text-center mb-4">Rejoins-nous</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group mb-3">
            <%= f.input :nom, label: "Pseudo", required: false, input_html: { class: "form-control" } %>
          </div>

          <div class="form-group mb-3">
          <%= f.input :localisation, label: "Localisation", required: false, input_html: { class: "form-control" } %>
          </div>

          <div class="form-group mb-3">
            <%= f.input :email, required: true, autofocus: true, input_html: { class: "form-control", autocomplete: "email" } %>
          </div>

          <div class="form-group mb-3">
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length), input_html: { class: "form-control", autocomplete: "new-password" } %>
          </div>

          <div class="form-group mb-3">
            <%= f.input :password_confirmation, required: true, input_html: { class: "form-control", autocomplete: "new-password" } %>
          </div>

          <div class="d-grid">
            <%= f.button :submit, "Créer mon compte", class: "btn btn-dark mt-3 btn-lg rounded-3 w-100" %>
          </div>
        <% end %>

        <p class="text-center mt-3">Déjà inscrit ? <%= link_to "Connecte-toi ici", new_session_path(resource_name), class: "text-primary fw-bold" %></p>
      </div>
    </div>
  </div>
</div>
